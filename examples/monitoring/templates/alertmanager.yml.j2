# Alertmanager Configuration
# Generated by Ansible

global:
  resolve_timeout: 5m
{% if smtp_server is defined %}
  smtp_smarthost: '{{ smtp_server }}'
  smtp_from: '{{ smtp_from }}'
  smtp_require_tls: true
{% endif %}

templates:
  - '/etc/alertmanager/templates/*.tmpl'

route:
  group_by: ['alertname', 'instance', 'severity']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 4h
  receiver: 'default-receiver'
  
  routes:
    # Critical alerts - immediate notification
    - match:
        severity: critical
      receiver: 'critical-receiver'
      group_wait: 10s
      repeat_interval: 1h
    
    # Warning alerts
    - match:
        severity: warning
      receiver: 'warning-receiver'
      group_wait: 1m
      repeat_interval: 4h
    
    # Info alerts - daily summary
    - match:
        severity: info
      receiver: 'info-receiver'
      group_wait: 5m
      repeat_interval: 24h

receivers:
  - name: 'default-receiver'
{% if slack_webhook_url %}
    slack_configs:
      - api_url: '{{ slack_webhook_url }}'
        channel: '{{ slack_channel }}'
        send_resolved: true
        title: '{% raw %}{{ template "slack.default.title" . }}{% endraw %}'
        text: '{% raw %}{{ template "slack.default.text" . }}{% endraw %}'
{% endif %}
{% if alert_receivers is defined %}
    email_configs:
{% for email in alert_receivers %}
      - to: '{{ email }}'
        send_resolved: true
{% endfor %}
{% endif %}

  - name: 'critical-receiver'
{% if slack_webhook_url %}
    slack_configs:
      - api_url: '{{ slack_webhook_url }}'
        channel: '{{ slack_channel }}'
        send_resolved: true
        color: '{% raw %}{{ if eq .Status "firing" }}danger{{ else }}good{{ end }}{% endraw %}'
        title: 'üö® CRITICAL: {% raw %}{{ .GroupLabels.alertname }}{% endraw %}'
        text: '{% raw %}{{ range .Alerts }}{{ .Annotations.description }}{{ "\n" }}{{ end }}{% endraw %}'
{% endif %}
{% if alert_receivers is defined %}
    email_configs:
{% for email in alert_receivers %}
      - to: '{{ email }}'
        send_resolved: true
        headers:
          Subject: '[CRITICAL] {% raw %}{{ .GroupLabels.alertname }}{% endraw %}'
{% endfor %}
{% endif %}

  - name: 'warning-receiver'
{% if slack_webhook_url %}
    slack_configs:
      - api_url: '{{ slack_webhook_url }}'
        channel: '{{ slack_channel }}'
        send_resolved: true
        color: 'warning'
        title: '‚ö†Ô∏è Warning: {% raw %}{{ .GroupLabels.alertname }}{% endraw %}'
{% endif %}

  - name: 'info-receiver'
{% if slack_webhook_url %}
    slack_configs:
      - api_url: '{{ slack_webhook_url }}'
        channel: '{{ slack_channel }}'
        send_resolved: true
        color: '#439FE0'
        title: '‚ÑπÔ∏è Info: {% raw %}{{ .GroupLabels.alertname }}{% endraw %}'
{% endif %}

inhibit_rules:
  # If critical alert is firing, inhibit warning for same alertname+instance
  - source_match:
      severity: 'critical'
    target_match:
      severity: 'warning'
    equal: ['alertname', 'instance']
